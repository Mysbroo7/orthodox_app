platform :ios, '13.0'

# تأكد من أن Flutter يعرف أين يجد ملفات الإعدادات في Codemagic
load File.join(File.dirname(File.realpath(__FILE__)), 'Flutter', 'generated_config_helper.rb') if File.exist?(File.join(File.dirname(File.realpath(__FILE__)), 'Flutter', 'generated_config_helper.rb'))

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  # هذا السطر ضروري جداً لربط الإضافات مثل flutter_native_splash
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target) if defined?(flutter_additional_ios_build_settings)
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
    end
  end
end